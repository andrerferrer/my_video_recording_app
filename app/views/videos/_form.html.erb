
<%= simple_form_for(@video) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <br>
    <h2>Upload your video</h2>
    <%= f.input :video, as: :file, label: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<h2>or</h2>

<h2>Record your video</h2>
<button id="start">Start</button>
<button id="stop">Stop and submit</button>
<div>
  <video style="border: 1px solid black" id="live" width="320" height="240" autoplay muted></video>
</div>
